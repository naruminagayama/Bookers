<p id="notice"><%= notice %></p>
<h1>Books</h1>
<table>
<tr>
  <th>Title</th><th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book) %></td>
  <td><%= link_to "Edit", edit_book_path(book) %></td>
  <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>

</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> :</h3>
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>