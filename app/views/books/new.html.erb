<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>